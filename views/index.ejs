<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a href="/" class="navbar-brand"><i class="fas fa-code me-2"></i>Admin</a>
            <button class="navbar-toggler" data-bs-target="#my-nav" data-bs-toggle="collapse" aria-controls="my-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                <ul class="navbar-nav">
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      Data Barang
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                      <li><a class="dropdown-item" href="/">Halaman Data</a></li>
                      <li><a class="dropdown-item" href="/add">Tambah Data</a></li>
                     
                    </ul>
                  </li>
                  <a class="btn btn-light" href="/login">logout</a>
                </ul>
              </div>
        </div>

    </nav>



<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            

            <% if (message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
            <strong><%= message.message %></strong>
        </div>
        <% } %>
            
            <div class="table-responsive">
                <% if(inventories != '') { %>

                
                <table class="table table-striped text-center my-3">
                    <thead>
                        <tr class="table-dark">
                            <th>id</th>
                            <th>Image</th>
                            <th>Kode Barang</th>
                            <th>Nama Barang</th>
                            <th>Ukuran</th>
                            <th>Harga</th>
                            <th>stok</th>
                            <td>Opsi</td>
                        </tr>
                    </thead>
                    <tbody>
                       <% inventories.forEach((row,index) => {%>
                            <tr class="align-middle">
                                <td><%= index + 1 %></td>
                                <td><img src="<%= row.image %>" width="50" class="img-thumbnail" ></td>
                                <td><%= row.kodebarang %></td>
                                <td><%= row.namabarang %></td>
                                <td><%= row.ukuran %></td>
                                <td><%= row.harga %></td>
                                <td><%= row.stok %></td>
                                <td>
                                <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">no inventories found in database</h1>
                <% } %>
            </div>

        </div>
    </div>
</div>
<%- include('layout/footer') %>